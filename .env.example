# Application Settings
DEBUG=false
APP_NAME="Snippet Manager"

# Database Settings
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/postgres"

# Authentication Settings
JWT_SECRET="your-secure-secret-key-here"  # Change this in production!
JWT_LIFETIME_SECONDS=3600

# Cookie Settings
COOKIE_NAME="snippetmanagerauth"
COOKIE_MAX_AGE=3600

# Email Settings
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="hello@example.com"
SMTP_PASSWORD="your-password"
SMTP_STARTTLS=false
SMTP_SSL=false
SMTP_FROM="no-reply@example.com"
SMTP_FROM_NAME="Snippet Manager"
# This will disable sending emails in development and output in the terminal instead
SMTP_LOCAL_DEV=false
